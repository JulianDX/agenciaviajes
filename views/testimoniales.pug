extends ./layout/index
block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{actualPage}
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque-testimoniales

        .row 



        .row 
            h2.d-block.w-100.text-center Agrega un Testimonial
            if (errores)
                each error in errores 
                    .col-md-12
                     .alert.col.alert-danger.text-center= error
            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST") 
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre.form-control(type="text" placeholder="Tu Nombre" name="nombre" value=nombre)
                        .form-group
                            label(for="correo") Correo
                            input#correo.form-control(type="text" placeholder="Tu Correo" name="correo" value=correo)
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje.form-control(name="mensaje" placeholder="Tu Mensaje" rows="3")=mensaje
                        input.btn-success.btn.btn-block(type="submit")